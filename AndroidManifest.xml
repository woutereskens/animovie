<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.animovie"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
     
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/animovie_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.animovie.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.animovie.activity.Movie_Detail"
            android:label="@string/movie_detail_label" >
        </activity>
        <activity
            android:name="com.example.animovie.activity.Person_Detail"
            android:label="@string/person_detail_title" >
        </activity>
        <activity
        	android:name="com.example.animovie.activity.Register"
            android:label="@string/register_title" >
        </activity>
        <activity
            android:name="com.example.animovie.activity.Quiz"
            android:label="@string/quiz_title" >
        </activity>
        <activity
            android:name="com.example.animovie.activity.My_Profile"
            android:label="@string/my_profile_title" >
        </activity>
        <activity
            android:name="com.example.animovie.activity.Movie_Search"
            android:label="@string/movie_search_label">
        </activity>
        <activity
            android:name="com.example.animovie.activity.Person_Search"
            android:label="@string/people_search_label">
        </activity>
        <activity
            android:name="com.example.animovie.activity.About"
            android:label="@string/about_title">
        </activity>
    </application>
</manifest>
